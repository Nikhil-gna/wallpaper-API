    <title>Wallzyi</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"
    />
    <style>
      :root {
        --primary-color: #ffcc00;
        --secondary-color: #000;
        --text-color: #fff;
      }

      body {
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto,
          "Helvetica Neue", Arial, sans-serif;
        margin: 0;
        padding: 0;
        background: var(--secondary-color);
        color: var(--text-color);
        text-align: center;
        line-height: 1.6;
      }

      .container {
        width: 90%;
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
      }

      header.hero {
        position: relative;
        overflow: hidden;
        padding: 0;
      }

      .hero-video {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        z-index: -1;
        filter: invert(1);
        transition: filter 200ms;
      }

      .hero-content {
        position: relative;
        z-index: 1;
        padding-top: 60px;
      }

      .hero-content h1 {
        font-size: clamp(2rem, 5vw, 3.5rem);
        color: var(--primary-color);
      }

      .hero-content p {
        font-size: clamp(1rem, 3vw, 1.2rem);
        max-width: 600px;
        margin-left: auto;
        margin-right: auto;
      }

      .btn-download,
      .btn-contact {
        background: var(--primary-color);
        color: var(--secondary-color);
        padding: 12px 24px;
        text-decoration: none;
        border-radius: 50px;
        font-weight: bold;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 10px;
        font-size: clamp(0.9rem, 2vw, 1.1rem);
      }

      .btn-download:hover,
      .btn-contact:hover {
        background: #e6b800;
        color: var(--text-color);
        transform: translateY(-3px);
        box-shadow: 0 4px 10px rgba(255, 204, 0, 0.3);
      }

      .app-store-icon {
        width: 24px;
        height: 24px;
        fill: currentColor;
      }

      @media (max-width: 480px) {
        .btn-download,
        .btn-contact {
          padding: 10px 20px;
        }

        .app-store-icon {
          width: 20px;
          height: 20px;
        }
      }

      .hero-images {
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
        gap: 20px;
        margin-top: 20px;
      }

      .hero-images img {
        width: 100%;
        max-width: 300px;
        height: auto;
        border-radius: 20px;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
        transition: transform 0.3s ease;
      }

      .hero-images img:hover {
        transform: scale(1.05);
      }

      section {
        padding: 60px 0;
        background: linear-gradient(45deg, #111, #222);
      }

      section h2 {
        font-size: clamp(1.5rem, 4vw, 2.5rem);
        margin-bottom: 20px;
        color: var(--primary-color);
      }

      section p {
        font-size: clamp(0.9rem, 2vw, 1.1rem);
        max-width: 800px;
        margin-left: auto;
        margin-right: auto;
      }

      footer {
        background: #111;
        padding: 20px 0;
      }

      footer p {
        margin: 0;
        font-size: 0.9rem;
      }

      @media (max-width: 768px) {
        .hero-images {
          flex-direction: column;
          align-items: center;
        }

        .contact-content {
          flex-direction: column;
          align-items: center;
        }

        .contact-content img,
        .contact-content div {
          max-width: 100%;
          text-align: center;
        }

        .contact-content div {
          padding-top: 20px;
        }
      }

      .contact-content {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 20px;
        margin-top: 40px;
      }

      .contact-content img {
        width: 100%;
        max-width: 400px;
        height: auto;
        border-radius: 20px;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
        transition: transform 0.3s ease;
      }

      .contact-content img:hover {
        transform: scale(1.05);
      }
    </style>
  </head>
